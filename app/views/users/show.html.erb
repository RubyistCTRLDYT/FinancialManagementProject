<% provide(:title, @user.name) %>
<div class="row">
  <aside style = "border-right:1px solid #BBBBBB;" class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h5><%= render 'shared/user_info' %></h5>
      
    </section>
    <%= link_to "Create new data",  new_financial_datum_path %>
    <br><br>
    <%= link_to "All Financial data",   {:controller => "financial_data", :action => "index"} %>
    <br><br> <br>
    <br><br> <br>
    <br><br> <br>  
    <br><br> <br>
    <br><br> <br>
    
  </aside>

  <div class="col-md-9">
      <%= render 'financial_data/data_picture' %>
      <%= line_chart FinancialDatum.group(:description).group_by_week(:commit_time).where(user_id: @user.id).sum(:money), min: 1 %>
      
  </div>
</div>