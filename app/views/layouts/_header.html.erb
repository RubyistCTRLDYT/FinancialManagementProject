<header class="navbar navbar-fixed-top navbar-inverse" style="background-color:#000000;">
  <div class="container" style="background-color:#000000;">
    <%= link_to image_tag("FMlogo_small_rev.png", alt: "Rails logo"), root_path, id: "FMlogo" %>
    <%= link_to " Financial Management", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
